    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(@user.errors.count, "件のエラー") %> </h3>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="signup-area form-group col-sm-offset-3 col-sm-6">
      <%= form_with(model: @user, local: true) do |f| %>
        <p>◆ <%= f.label :メールアドレス %></p>
        <p><%= f.email_field :email, size:"60x5", class:"form-control" %></p>
        <p>◆ <%= f.label :パスワード %></p>
        <p><%= f.password_field :password, size:"60x5", class:"form-control" %></p>
        <p>◆ <%= f.label :パスワード確認 %></p>
        <%= f.submit "登録" , class:"btn btn-primary"%>
      <% end %>
    </div>
